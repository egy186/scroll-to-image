{
  "name": "Scroll to Image",
  "description": "Scroll to the next image.",
  "version": "0.8.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "{d85e84a8-8446-4496-8585-66ef63f6e556}",
      "strict_min_version": "68.0",
      "update_url": "https://egy186.github.io/scroll-to-image/updates.json"
    }
  },
  "background": {
    "scripts": [
      "background.ts"
    ]
  },
  "commands": {
    "scroll-to-next": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Scroll to the next image"
    },
    "scroll-to-previous": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Scroll to the previous image"
    }
  },
  "homepage_url": "https://github.com/egy186/scroll-to-image#readme",
  "icons": {
    "48": "assets/icon.png",
    "96": "assets/icon@2x.png"
  },
  "manifest_version": 2,
  "options_ui": {
    "open_in_tab": true,
    "page": "index.html"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs"
  ]
}
